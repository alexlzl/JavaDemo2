<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/complete_order_child_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:text="牛仔裤"
        android:textColor="@color/color666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/complete_order_child_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/complete_order_child_item_category"
        android:layout_below="@id/complete_order_child_item_category"
        android:layout_marginTop="14dp"
        android:text="9"
        android:textColor="@color/color666666"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/complete_order_child_item_add_reduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/complete_order_child_item_price"
        android:layout_marginRight="19dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/complete_order_child_item_reduce"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/reduce_num" />

        <TextView
            android:id="@+id/complete_order_child_item_num"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/colorff5000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/complete_order_child_item_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/add_num" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_1px"
        android:layout_below="@id/complete_order_child_item_add_reduce"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="14dp"
        android:background="@color/color999999" />

</RelativeLayout>