<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_order_list_back"
            android:layout_width="13dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:background="@drawable/back_icon_green" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/search_order_list_back"
            android:background="@drawable/search_bg"
            android:gravity="center_vertical"
            android:hint=""
            android:paddingLeft="18dp"
            android:textColorHint="@color/color666666"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/search_order_list_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:text="取消"
            android:textColor="@color/color26cbb2"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_1px"
        android:layout_marginTop="8dp"
        android:background="@color/color999999" />

    <com.minsheng.app.view.MsRefreshListView
        android:id="@+id/search_order_list_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:divider="@color/color999999"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </com.minsheng.app.view.MsRefreshListView>

</LinearLayout>