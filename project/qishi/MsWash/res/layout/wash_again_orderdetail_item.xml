<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/wash_again_orderdetail_item_leftparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牛仔裤"
            android:textColor="@color/color666666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="缺扣子"
            android:textColor="@color/color999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="15510030090"
            android:textColor="@color/color666666"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/colorff5000"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/wash_again_orderdetail_item_cb"
            android:background="@drawable/checkbox_bg"
            style="@style/check_box_style"
            android:layout_marginLeft="9dp"
            android:layout_width="18dp"
            android:layout_height="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_1px"
        android:layout_below="@id/wash_again_orderdetail_item_leftparent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@color/color999999" />

</RelativeLayout>