<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="16dp" >

    <LinearLayout
        android:id="@+id/universal_order_detail_item_leftparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/universal_order_detail_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牛仔裤"
            android:textColor="@color/color666666"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="108dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/universal_order_detail_item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="缺扣子"
            android:textColor="@color/color999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/universal_order_detail_item_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="15510030090"
            android:textColor="@color/color666666"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/universal_order_detail_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/colorff5000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/universal_order_detail_item_again_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="9dp"
                android:background="@drawable/wash_again_bg"
                android:gravity="center"
                android:text="重"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <CheckBox
                android:visibility="gone"
                android:id="@+id/universal_order_detail_item_ck"
                style="@style/check_box_style"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="9dp"
                android:background="@drawable/checkbox_bg" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_1px"
        android:layout_below="@id/universal_order_detail_item_leftparent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@color/color999999" />

</RelativeLayout>