<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:text="@string/login_title"
        android:textColor="@color/color666666"
        android:textSize="22sp" />
    <!-- 输入区域 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_gray_corner"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="21dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/login_head" />

            <EditText
                android:id="@+id/login_phonenum_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLines="2"
                android:paddingLeft="14dp"
                android:textColorHint="@color/colorb3b3b3"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_gray_corner"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="11dp"
                android:layout_height="25dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/login_password" />

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="2"
                android:paddingLeft="17dp"
                android:textColorHint="@color/colorb3b3b3" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/login_forget_passord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:text="忘记密码"
        android:textColor="@color/color666666"
        android:textSize="14sp" />

</LinearLayout>