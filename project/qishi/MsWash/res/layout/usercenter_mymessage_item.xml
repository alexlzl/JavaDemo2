<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp" >

    <TextView
        android:id="@+id/usercenter_mymessage_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="23dp"
        android:text="今天开会"
        android:textColor="@color/color666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/usercenter_mymessage_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/usercenter_mymessage_item_title"
        android:layout_marginRight="18dp"
        android:background="@drawable/messagecenter_notread_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="未读"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/usercenter_mymessage_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/usercenter_mymessage_item_state"
        android:layout_below="@id/usercenter_mymessage_item_state"
        android:layout_marginRight="18dp"
        android:layout_marginTop="6dp"
        android:text="2012"
        android:textColor="@color/color666666"
        android:textSize="14sp" />

</RelativeLayout>