<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/usercenter_mymessage_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="今天所有人到公司开会"
        android:textColor="@color/color666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/usercenter_mymessage_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="3月2号"
        android:textColor="@color/color666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/usercenter_mymessage_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:text="ddddddddddddddddddddddddddddddddddddddddddddd"
        android:textColor="@color/color666666"
        android:textSize="16sp" />

</LinearLayout>