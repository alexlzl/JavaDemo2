<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/appointment_order_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color999999"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="10:20:20"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/getclothes_order_item_isnew_order"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/appointment_order_list_item_time"
        android:layout_alignParentRight="true"
        android:src="@drawable/order_is_new" />
    <ImageView
        android:id="@+id/getclothes_order_item_gettoday"
        android:layout_alignBottom="@id/appointment_order_list_item_time"
        android:layout_alignParentRight="true"
        android:src="@drawable/canget_order_today"
        android:layout_width="66dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:id="@+id/appointment_order_list_item_userparent"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/appointment_order_list_item_middleparent"
        android:layout_below="@id/appointment_order_list_item_time"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/getclothes_order_item_head"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/drawable_bg"
            android:padding="1px"
            android:scaleType="fitXY"
            android:src="@drawable/usericon" />

        <TextView
            android:id="@+id/getclothes_order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="alex"
            android:textColor="@color/color666666"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- 中间布局=================== -->

    <LinearLayout
        android:id="@+id/appointment_order_list_item_middleparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/appointment_order_list_item_userparent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/appointment_order_list_item_location_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/order_num" />

            <TextView
                android:id="@+id/getclothes_order_item_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="123456"
                android:textColor="@color/color666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/order_date" />

            <TextView
                android:id="@+id/getclothes_order_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2月26日"
                android:textColor="@color/color666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_order_list_item_phone_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/order_amount" />

            <TextView
                android:id="@+id/getclothes_order_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="8件"
                android:textColor="@color/color666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/order_price" />

            <TextView
                android:id="@+id/getclothes_order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1.5公里"
                android:textColor="@color/color666666"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:src="@drawable/order_arrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="103dp" >

        <Button
            android:id="@+id/getclothes_order_item_bt"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/order_list_button_bg_green"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="我已取走"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>