<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_bg"
    android:gravity="center_vertical"
    android:minHeight="@dimen/libs_toast_min_height"
    android:minWidth="@dimen/libs_toast_min_width"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/toastIcon"
        android:layout_width="@dimen/libs_toast_icon_width"
        android:layout_height="@dimen/libs_toast_icon_height"
        android:src="@drawable/libs_dialog_alert_icon" />

    <TextView
        android:id="@+id/toastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/libs_toast_content_margin_left"
        android:textColor="@color/libs_toast_content_color"
        android:textSize="@dimen/libs_toast_content_text_size" />

</LinearLayout>