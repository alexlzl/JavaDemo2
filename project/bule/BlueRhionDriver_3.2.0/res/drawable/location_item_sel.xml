<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <stroke android:width="1dp" android:color="#d1d1d1" />

            <solid android:color="#FFFFFF" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <stroke android:width="1dp" android:color="#d1d1d1" />

            <solid android:color="#22d1d1d1" />
        </shape></item>

</selector>