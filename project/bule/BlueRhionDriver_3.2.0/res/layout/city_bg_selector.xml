<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">

    <item android:layout_width="match_parent" android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />

            <stroke android:width="1dp" android:color="#d1d1d1" />

            <solid android:color="#ffffff" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />

            <stroke android:width="1dp" android:color="#d1d1d1" />

            <solid android:layout_height="match_parent" android:color="#ffffff" />

        </shape></item>

</selector>