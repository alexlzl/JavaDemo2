<?xml version="1.0" encoding="utf-8"?>
<cn.bluerhino.driver.view.PlaceofReceiptLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/_5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 收货标题 -->

        <TextView
            android:id="@+id/placeofreceipt_takemantitleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:singleLine="true"
            android:text="@string/response_takepman_title"
            android:textColor="#393939"
            android:textSize="@dimen/_14sp" />

        <!-- 收货人 -->

        <TextView
            android:id="@+id/placeofreceipt_takeman"
            style="@style/orderinfo_item_3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5dp"
            android:textColor="#393939"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 收货人联系方式 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 收货手机标题 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:singleLine="true"
            android:text="@string/response_takepman_title"
            android:textColor="#393939"
            android:textSize="@dimen/_14sp" />

        <!-- 收货人联系方式:手机号 -->

        <Button
            android:id="@+id/placeofreceipt_takemanphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4784E1"
            android:clickable="true"
            android:paddingLeft="@dimen/_5dp"
            android:singleLine="true"
            android:text="@string/response_takepman_phone_title"
            android:textColor="#393939"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 收货地址1 -->

        <TextView
            android:id="@+id/placeofreceipt_addresstitleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:singleLine="true"
            android:textColor="#393939"
            android:textSize="@dimen/_14sp" />

        <!-- 收货地址内容 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/placeofreceipt_address"
                style="@style/orderinfo_item_3_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="#4f5f6f"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/orderinfo_consignee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textColor="#4f5f6f"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/orderinfo_consignee_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00A4E3"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</cn.bluerhino.driver.view.PlaceofReceiptLinearLayout>