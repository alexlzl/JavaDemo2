<?xml version="1.0" encoding="utf-8"?>
<cn.bluerhino.driver.view.PlaceofReceiptLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- 收货地址标题 -->

    <TextView
        android:id="@+id/placeofreceipt_addresstitleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:text="@string/place_of_receipt"
        android:textColor="#969696"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 收货地址内容 -->
        <TextView
            android:id="@+id/placeofreceipt_address"
            style="@style/orderinfo_item_3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#4f5f6f"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/orderinfo_consignee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textColor="#4f5f6f"
                android:textSize="15sp" 
                android:visibility="gone"/>

            <TextView
                android:id="@+id/orderinfo_consignee_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00A4E3"
                android:textSize="15sp" 
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</cn.bluerhino.driver.view.PlaceofReceiptLinearLayout>