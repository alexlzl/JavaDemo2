<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/common_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="11dp"
                            android:background="#f3f4f2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#d1d1d1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_while"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_while"
                                android:orientation="horizontal"
                                android:paddingTop="7dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="订单号: "
                                    android:textColor="#969696"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/orderinfo_orderid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4f5f6f"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <!-- 发货地 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_while"
                                android:orientation="horizontal"
                                android:paddingTop="7dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="发货地: "
                                    android:textColor="#969696"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/orderinfo_item_placeofdispatch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#4f5f6f"
                                        android:textSize="15sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/orderinfo_item_user"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingRight="10dp"
                                            android:textColor="#4f5f6f"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/orderinfo_item_userphone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#00A4E3"
                                            android:textSize="15sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View style="@style/seperate_line_image" />

                            <!-- 收货地 -->

                            <LinearLayout
                                android:id="@+id/orderinfo_item_placeofShipping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />

                            <!-- 公里数 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_while"
                                android:orientation="horizontal"
                                android:paddingTop="7dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="公里数: "
                                    android:textColor="#969696"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/orderinfo_item_kilometer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4f5f6f"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="10dp"
                                android:background="#d1d1d1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/nav_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="11dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="11dp"
                                    android:background="@drawable/nav_button_selector"
                                    android:text="导航"
                                    android:textColor="@color/font_while" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#d1d1d1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="11dp"
                            android:background="#f3f4f2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_while"
                            android:orientation="vertical" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#d1d1d1" />

                            <!-- 备注信息 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="7dp"
                                android:paddingTop="7dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/remark_title"
                                    android:textColor="#969696"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/orderinfo_remark_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="15dp"
                                    android:text="@string/remark_none"
                                    android:textColor="#4f5f6f"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- 收货信息:需要回单, 需要小推车, 用户更车 的显示 -->

                            <LinearLayout
                                android:id="@+id/orderinfo_remark_info_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#d1d1d1" />

                        <!-- 第三栏:包含订单费用,等待费用,需要收款信息的显示 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/money_explain_bg"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <!-- 订单费用 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/serviceorder_item_first_left_layout_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:text="订单费用"
                                    android:textColor="#969696"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/orderbill_cost"
                                    style="@style/serviceorder_item_first_layout_style"
                                    android:text="120元"
                                    android:textColor="#fd6138"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <!-- 等待费用 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:background="#ffffff"
                                android:orientation="horizontal"
                                android:visibility="gone" >

                                <TextView
                                    style="@style/serviceorder_item_first_left_layout_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="需要收款"
                                    android:textColor="#969696"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/waiting_for_the_cost"
                                    style="@style/serviceorder_item_first_layout_style"
                                    android:text="120元"
                                    android:textColor="#565656"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <!-- 需要收款 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/serviceorder_item_first_left_layout_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:text="需要收款"
                                    android:textColor="#969696"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/money_need_cost"
                                    style="@style/serviceorder_item_first_layout_style"
                                    android:text="120元"
                                    android:textColor="#565656"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 订单状态显示信息 -->

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/activity_orderflow_orderstate_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_while"
                            android:orientation="vertical" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#d1d1d1" />

                            <TextView
                                android:id="@+id/activity_orderflow_orderstate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="7dp"
                                android:text="当前司机出发"
                                android:textColor="#fd6138"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#d1d1d1" />
                        </LinearLayout>
                        <!-- 空白栏: 用来显示按钮 和 时间区域 -->

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/wait_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/popupwindow_wait_time"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:id="@+id/next_button"
        layout="@layout/order_flow_layout" />

</LinearLayout>