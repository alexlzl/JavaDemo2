<?xml version="1.0" encoding="utf-8"?>
<cn.bluerhino.driver.view.CurOrderRemarkLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <TextView
        android:id="@+id/orderinfo_remark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="订单要求: "
        android:textColor="#969696"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/orderinfo_remark_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="需要跟车"
        android:textColor="#4f5f6f"
        android:textSize="14sp" />

</cn.bluerhino.driver.view.CurOrderRemarkLinearLayout>